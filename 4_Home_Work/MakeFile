CXX=g++
CXXFLAGS=-Wall -Wextra -Werror -std=c++14 -O3
LINKERFLAGS=-lSDL2

 EXAMPLE=gObject

 main: main.o Line.o Triangle.o Ellipse.o Rectangle.o Regular_Polygon.o
	$(CXX) $^ $(LINKERFLAGS) -o $@

%.o: %.cpp %.h
	$(CXX) $(CXXFLAGS) -c $< 

exec: main 
	./main

clean:
	rm -f main.o Line.o Triangle.o Ellipse.o Rectangle.o Regular_Polygon.o